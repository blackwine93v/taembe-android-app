<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:gravity="center_vertical"
    android:layout_margin="2dp"
    android:background="#FFFF">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivImageProduct"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_launcher"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product title"
            android:id="@+id/tvTitleProduct"
            android:textColor="#47525E"
            android:maxHeight="70dp"
            android:textSize="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitleProduct"
            android:text="Size: 18\nMàu: xanh"
            android:layout_margin="5dp"
            android:id="@+id/tvOptionProduct"
            android:textColor="#47525E"
            android:maxHeight="70dp"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250000 VND"
            android:textColor="#0097A7"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/tvPriceProduct"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <Button
            android:backgroundTint="#80DEEA"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="Xóa"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="#47525E"
            android:layout_alignParentEnd="true"
            android:id="@+id/button" />

        <Spinner
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/tvPriceProduct"
            android:background="@drawable/border"
            android:layout_centerHorizontal="true"
            android:id="@+id/spinnerQty"
            />
    </RelativeLayout>
</LinearLayout>