<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="center_vertical"
    android:layout_margin="2dp"
    android:background="#FFFF">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivImageProduct"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_launcher"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product titleProduct titleProduct titleProduct titleProduct"
            android:id="@+id/tvTitleProduct"
            android:textColor="#47525E"
            android:maxHeight="70dp"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250000 VND"
            android:textColor="@color/Price"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/tvPriceProduct"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="-12%"
            android:textColor="#fff"
            android:textSize="17dp"
            android:background="#f90000"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/tvDiscountProductTag"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

  <!--      <Button
            android:backgroundTint="#80DEEA"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Mua"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="#47525E"
            android:layout_alignParentEnd="true"
            android:id="@+id/button" />-->
    </RelativeLayout>
</LinearLayout>